{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ChaiKeRou/3179/main/data/state_diseases.csv"
  },
  "transform": [
    {
      "calculate": "datum.gender == 'female' ? 'Female' : 'Male'",
      "as": "gender"
    },
    {
      "filter": "datum.state == 'Selangor' || datum.state == 'Johor' || datum.state == 'Kedah' || datum.state == 'Kelantan' || datum.state == 'Melaka' || datum.state == 'Negeri Sembilan' || datum.state == 'Pahang' || datum.state == 'Perak' || datum.state == 'Perlis' || datum.state == 'Pulau Pinang' || datum.state == 'Sabah' || datum.state == 'Sarawak' || datum.state == 'Selangor' || datum.state == 'Terengganu'"
    }
  ],
  
  "background": null,
  "params": [
    {
      "name": "sex_highlight",
      "select": {
        "type": "point",
        "on": "mouseover",
        "fields": [
          "gender"
        ]
      }
    }
  ],
  "facet": {
    "field": "cause_death",
    "title": "",
    "type": "nominal"
  },
  "spec": {
    "width": 170,
  "height": 125,
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "state",
        "type": "nominal",
        "title": "State"
      },
      "y": {
        "field": "death_rate",
        "type": "quantitative",
        "title": "Death Rate"
      },
      "color": {
        "field": "gender",
        "type": "nominal",
        "legend": null,
        "scale": {
          "range": [
            "#e30133",
            "#2f88a6"
          ]
        }
      },
      "opacity": {
          "condition": {
            "param": "sex_highlight",
            "value": 1
          },
          "value": 0.2
        },
        "tooltip": [
          {
            "field": "state",
            "title": "State",
            "type": "nominal"
          },
          {
            "field": "gender",
            "title": "Gender",
            "type": "nominal"
          },
          {
            "field": "death_rate",
            "title": "Death Rate",
            "type": "quantitative"
          }
        ]
    }
  },
  "config": {
    "facet": {
      "columns": 2
    }
  }
}