{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Debugging Malaysia State Map",
    "fontSize": 18,
    "fontWeight": "bold",
    "font": "Arial"
  },
  "width": 800,
  "height": 500,
  "projection": {
    "type": "mercator",
    "center": [110, 2],  
    "scale": 1500        
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ChaiKeRou/FIT3179-DataVisualisation2/main/js/malaysia.state.topojson",
        "format": {"type": "topojson", "feature": "malaysia.state"}
      },
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 1, "fill": "lightblue"}
    }
  ],
  "config": {
    "background": "whitesmoke",
    "padding": {"top": 20, "left": 10, "right": -50, "bottom": -5},
    "title": {"anchor": "start", "offset": 10},
    "view": {"stroke": null}
  }
}