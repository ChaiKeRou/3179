{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Death cases in Malaysia",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/ChaiKeRou/FIT3179-DataVisualisation2/js/malaysia_states.topojson",
      "format": {"type": "topojson", "feature": "malaysia_states"}
    },
    "transform": [
      {
        "lookup": "properties.name",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/ChaiKeRou/FIT3179-DataVisualisation2/data/state_crude_death_rate.csv"
          },
          "key": "State",
          "fields": ["Death"]
        }
      },
      {"calculate": "datum.Death + 0.1", "as": "Crude Death Rate"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Crude Death Rate",
        "type": "quantitative",
        "scale": {"type": "log"}
      },
      "tooltip": [
        {"field": "properties.name", "type": "nominal", "title": "State"},
        {"field": "Death", "type": "quantitative"}
      ]
    }
  }