{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Crude Death Rate Across Malaysian Districts (2022)",
  "width": "container",
  "height": 550,
  "params": [
    {
      "name": "zoom_level",
      "value": 2200,
      "bind": {
        "input": "range",
        "min": 2200,
        "max": 6200,
        "step": 1000,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [
        109,
        0.5
      ],
      "bind": {
        "input": "select",
        "options": [
          [
            109,
            0.5
          ],
          [
            103,
            4
          ],
          [
            114,
            3.5
          ]
        ],
        "labels": [
          "Malaysia",
          "West Malaysia",
          "East Malaysia"
        ],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equirectangular",
    "center": {
      "expr": "center_to"
    },
    "scale": {
      "expr": "zoom_level"
    }
  },
  "background": null,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ChaiKeRou/3179/main/js/ocean.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_ocean"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#bcd3eb"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ChaiKeRou/3179/main/js/ne_10m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5,
        "fill": "lightgray"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ChaiKeRou/3179/main/js/malaysia.district.json",
        "format": {
          "type": "topojson",
          "feature": "malaysia.district"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#a98080",
        "strokeWidth": 0.5
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ChaiKeRou/3179/main/data/crude_death_state_district.csv"
            },
            "key": "Administrative district",
            "fields": [
              "Crude death rate"
            ]
          }
        }
      ],
      "encoding": {
        "color": {
          "field": "Crude death rate",
          "type": "quantitative",
          "scale": {
            "domain": [
              0,
              15
            ],
            "range": [
              "#fff4ef",
              "#fcae91",
              "#fb6a4a",
              "#a50f15",
              "#760d0f"
            ]
          },
          "legend": {
            "title": "Crude Death Rate (per 1,000 population)",
            "orient": "bottom-right",
            "direction": "horizontal",
            "titleFont": "Outfit",
            "labelFont": "Outfit",
            "titleFontWeight": 700,
            "labelFontWeight": 300,
            "titleFontSize": 12,
            "labelFontSize": 10,
            "titlePadding": 5,
            "gradientLength": 250,
            "titleLimit": 250,
            "offset": 5
          }
        },
        "tooltip": [
          {
            "field": "properties.name",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Crude death rate",
            "type": "quantitative",
            "title": "Crude Death Rate"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ChaiKeRou/3179/main/js/malaysia.state.json",
        "format": {
          "type": "topojson",
          "feature": "malaysia.state"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#4d1f1f",
        "strokeWidth": 1.7,
        "fill": "transparent"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ChaiKeRou/3179/main/js/malaysia.district.json",
        "format": {
          "type": "topojson",
          "feature": "malaysia.district"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#7c5d5d",
        "strokeWidth": 0.5,
        "fill": "transparent"
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ChaiKeRou/3179/main/data/crude_death_state_district.csv"
            },
            "key": "Administrative district",
            "fields": [
              "Crude death rate",
              "State"
            ]
          }
        }
      ],
      "encoding": {
        "color": {
          "value": null
        },
        "tooltip": [
          {
            "field": "State",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "properties.name",
            "type": "nominal",
            "title": "District"
          },
          {
            "field": "Crude death rate",
            "type": "quantitative",
            "title": "Crude Death Rate"
          }
        ]
      }
    },
    {
      "data": {
        "values": [
          {
            "longitude": 110,
            "latitude": 5.5,
            "label": "S O U T H   C H I N A   S E A"
          },
          {
            "longitude": 109,
            "latitude": -4,
            "label": "J A V A    S E A"
          }
        ]
      },
      "mark": {
        "type": "text",
        "font": "Times New Roman",
        "fontStyle": "italic",
        "fontSize": 14,
        "fontWeight": 700,
        "align": "center",
        "baseline": "top",
        "color": "#0c4d8a",
        "dx": 5,
        "dy": -10
      },
      "encoding": {
        "longitude": {
          "field": "longitude"
        },
        "latitude": {
          "field": "latitude"
        },
        "text": {
          "field": "label"
        }
      }
    },
    {
      "data": {
        "values": [
          {
            "longitude": 108,
            "latitude": 4,
            "label": "M  A  L  A  Y  S  I  A"
          }
        ]
      },
      "mark": {
        "type": "text",
        "font": "Arial",
        "fontSize": 22,
        "fontWeight": 800,
        "align": "center",
        "baseline": "top",
        "color": "black",
        "dx": 5,
        "dy": -10
      },
      "encoding": {
        "longitude": {
          "field": "longitude"
        },
        "latitude": {
          "field": "latitude"
        },
        "text": {
          "field": "label"
        }
      }
    },
    {
      "data": {
        "values": [
          {
            "longitude": 100.5,
            "latitude": 6.9,
            "label": "THAILAND"
          },
          {
            "longitude": 101.8,
            "latitude": -1,
            "label": "INDONESIA"
          },
          {
            "longitude": 114,
            "latitude": 0,
            "label": "INDONESIA"
          }
        ]
      },
      "mark": {
        "type": "text",
        "font": "Arial",
        "fontSize": 14,
        "fontWeight": 700,
        "align": "center",
        "baseline": "top",
        "color": "#393939",
        "dx": 5,
        "dy": -10
      },
      "encoding": {
        "longitude": {
          "field": "longitude"
        },
        "latitude": {
          "field": "latitude"
        },
        "text": {
          "field": "label"
        }
      }
    },
    {
      "data": {
        "graticule": {
          "step": [
            5,
            5
          ]
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#888",
        "strokeWidth": 0.5,
        "strokeDash": [
          3,
          3
        ]
      }
    }
  ],
  "config": {
    "title": {
      "offset": 10,
      "font": "Outfit",
      "fontSize": 25,
      "fontWeight": 900,
      "align": "center",
      "color": "#3f2b12"
    },
    "font": "Outfit",
    "view": {
      "stroke": null
    }
  }
}