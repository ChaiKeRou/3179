{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/ChaiKeRou/3179/main/data/deaths_category_2000_2022.csv"
      },
    "background": null,
    "vconcat": [{
      "width": "container",
      "height": 250,
      "mark": "area",
      "encoding": {
        "x": {
          "timeUnit": "year", "field": "Year",
          "axis": {"domain": false, "format": "%Y", "tickSize": 0},
          "scale": {"domain": {"param": "brush"}}
        },
        "y": {
          "aggregate": "sum", "field": "Deaths",
          "axis": null,
          "stack": "center"
        },
        "color": {"field":"Category", "scale":{"range": ["#996e1f", "#f4c251"]}, "legend": null},
        "tooltip": [
                {
                    "field": "Category",
                    "title": "Category",
                    "type": "nominal"
                },
                {
                    "field": "Year",
                    "timeUnit": "year", 
                    "title": "Year",
                    "type": "ordinal"
                },
                {
                    "field": "Deaths",
                    "title": "Death Cases",
                    "type": "quantitative",
                    "format": ","
                },
                {
                  "field": "Total_deaths",
                  "title": "Total Death Cases",
                  "type": "quantitative",
                  "format": ","
              }
            ]
      }
    }, {
      "width": "container",
      "height": 60,
      "mark": "area",
      "params": [{
        "name": "brush",
        "select": {"type": "interval", "encodings": ["x"]}
      }],
      "encoding": {
        "x": {
          "timeUnit": "year", "field": "Year",
          "axis": {"domain": false, "format": "%Y", "tickSize": 0}
        },
        "y": {
          "aggregate": "sum", "field": "Deaths",
          "axis": null,
          "stack": "center"
        },
        "color": {"field":"Category", "scale":{"range": ["#996e1f", "##f4c251"]}}
      }
    }]
  }
  